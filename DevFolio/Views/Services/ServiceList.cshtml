@model List<DevFolio.Models.TblServices>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServicesId</td>
            <td>@item.ServicesTitle</td>
            <td>@item.Description</td>
            <td><a href="/Services/DeleteServices/@item.ServicesId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Services/UpdateServices/@item.ServicesId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Services/CreateServices/" class="btn btn-info">Yeni Hizmet Ekle</a>