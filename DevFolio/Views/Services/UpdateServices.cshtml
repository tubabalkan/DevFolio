@model DevFolio.Models.TblServices
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>

<form method="post">
    @*<label>Hizmet Id</label>*@
    <input type="hidden" class="form-control" name="ServicesId" value="@Model.ServicesId" />
    <br />
    <label>Hizmet Adı</label>
    <input type="text" class="form-control" name="ServicesTitle" value="@Model.ServicesTitle" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description" />
    <br />
    <button class="btn btn-warning">Hizmet Güncelle</button>

</form>